extends layout

block content
	form(method='post')
		.form-group
			|Title:
			input.form-control.form-margin(type='text', name='title', value='#{post.title}' disabled='disabled')
			|Tags
			input(type='text' name='tag1' value='#{post.tags[0]}' disabled='disabled')
			input(type='text' name='tag2' value='#{post.tags[1]}' disabled='disabled')
			input(type='text' name='tag3' value='#{post.tags[2]}' disabled='disabled')
			|Content:
			textarea.form-control.form-margin(name='post', rows='20', cols='100') #{post.post}
			button.btn.btn-primary.btn-block.btn-larger(type='submit' value='save') Save